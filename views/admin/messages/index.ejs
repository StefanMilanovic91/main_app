<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
		/>
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<title>DSlack | Messages</title>
		<link rel="stylesheet" href="/bootstrap.css" />
		<link rel="stylesheet" href="/bootstrap-icons.css" />
		<link rel="stylesheet" href="/css/admin/main.css" />
	</head>
	<body>
		<%- include('/admin/partials/navbar.ejs')%>
		<div class="container-fluid mt-5">
			<div class="row">
				<%- include('/admin/partials/sidebar.ejs')%>
				<div class="col-10" style="background-color: burlywood">
					<div class="d-flex align-items-center mb-3">
						<h1>Messages</h1>
					</div>
					<hr />

					<div class="row" style="height: 75vh">
						<div class="col-md-4 border-end d-flex flex-column">
							<div class="mb-3">
								<select id="conversationSelector" class="form-select">
									<option disabled hidden selected>Select User</option>
									<!-- @todo: Populate with conversations/users -->
									<!-- <% users.forEach(user => { %>
                                        <option value="<%= user._id %>"><%= user.username %></option>
                                    <% }) %> -->
								</select>
							</div>

							<div
								class="list-group flex-grow-1 overflow-auto"
								id="conversationList"
							></div>
						</div>

						<div class="col-md-8 d-flex flex-column" style="max-height: 100%;">
							<div class="border-bottom pb-2 mb-3">
								<h5 id="activeUserName" class="mb-0 text-muted">
									Select a conversation
								</h5>
							</div>

							<div
								id="chatMessages"
								class="flex-grow-1 overflow-auto mb-3 p-2"
								style="background-color: #f8f9fa; border-radius: 8px"
							></div>

							<div class="input-group">
								<input
									type="text"
									id="messageInput"
									class="form-control"
									placeholder="Type a message..."
								/>
								<button class="btn btn-primary" id="sendBtn">
									<i class="bi bi-send"></i>
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<script src="/socket.io.js"></script>
		<!-- @todo: Move the following script into /public/js/ folder  -->
		<script>
			// @todo: Attach listener on WS event, probably "new-message" event emited from BE
			// @todo: Fetch conversations and push into "conversations" array, then populate convo selector
			let conversations = [
				{
					conversationId: 'conv1',
					participants: ['1', '2'],
					userName: 'Marko',
					messages: [{sender: '2', text: 'TEST stesawd test test 12345'}, {sender: '1', text: 'TEST TESTTESTTESTTEST 12345'}],
				},
				{
					conversationId: 'conv2',
					participants: ['1', '3'],
					userName: 'Ana',
					messages: [],
				},
			];

			const socket = io();
			const CURRENT_USER_ID = '1'; // TODO: Continue from here. Fetch user session(logged user)

			let activeConversation = null;

			socket.on('connect', () => {
				console.log('Connected:', socket.id);
				socket.emit('register', CURRENT_USER_ID);
			});

			socket.on('receive_message', ({ conversationId, fromUserId, message }) => {
				const convo = conversations.find((c) => c.conversationId === conversationId);

				if (convo) {
					convo.messages.push({
						sender: fromUserId,
						text: message,
						time: new Date().toLocaleTimeString([], {
							hour: '2-digit',
							minute: '2-digit',
						}),
					});

					if (activeConversation?.conversationId === conversationId) {
						renderMessages();
					}
				}
			});

			function renderConversations() {
				const list = document.getElementById('conversationList');
				list.innerHTML = '';

				conversations.forEach((convo) => {
					const btn = document.createElement('button');
					btn.className = 'list-group-item list-group-item-action';
					btn.textContent = convo.userName;

					btn.addEventListener('click', () => {
						activeConversation = convo;
						document.getElementById('activeUserName').textContent = convo.userName;
						renderMessages();
					});

					list.appendChild(btn);
				});
			}

			function renderMessages() {
				const container = document.getElementById('chatMessages');
				container.innerHTML = '';

				activeConversation.messages.forEach((msg) => {
					const wrapper = document.createElement('div');
					wrapper.className = `d-flex mb-2 ${
						msg.sender === CURRENT_USER_ID
							? 'justify-content-end'
							: 'justify-content-start'
					}`;

					wrapper.innerHTML = `
						<div class="p-2 rounded ${
							msg.sender === CURRENT_USER_ID
								? 'bg-primary text-white'
								: 'bg-white border'
						}" style="max-width: 70%;">
							${msg.text}
						</div>
					`;

					container.appendChild(wrapper);
				});

				container.scrollTop = container.scrollHeight;
			}

			function sendMessage() {
				if (!activeConversation) return;

				const input = document.getElementById('messageInput');
				const text = input.value.trim();

				if (!text) return;

				activeConversation.messages.push({
					sender: CURRENT_USER_ID,
					text,
					time: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }),
				});

				renderMessages();

				const toUserId = activeConversation.participants.find(
					(id) => id !== CURRENT_USER_ID
				);

				socket.emit('private_message', {
					conversationId: activeConversation.conversationId,
					toUserId,
					fromUserId: CURRENT_USER_ID,
					message: text,
				});

				input.value = '';
			}

			document.getElementById('sendBtn').addEventListener('click', sendMessage);
			document.getElementById('messageInput').addEventListener('keypress', (e) => {
				if (e.key === 'Enter') sendMessage();
			});

			renderConversations();
		</script>
	</body>
</html>
